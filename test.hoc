{load_file("stdrun.hoc")}

create soma

objref ic, tv, vvec

soma {
	L=5.6419
	diam=5.6419
	insert hh
	ic = new IClamp(.5)
}
ic.del = .5
ic.dur = 0.1
ic.amp = 0.3

// for testing external mod file
// soma { insert Sample }

cvode.use_fast_imem(1)
cvode.cache_efficient(1)

// record results of a run
vvec = new Vector()
soma {vvec.record(&v(.5))}
tv = new Vector()
soma {tv.record(&t)}

// normal NEURON run
run()
vvec.printf("%8.4f\n")